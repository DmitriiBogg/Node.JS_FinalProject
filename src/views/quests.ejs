<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quests</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Available Quests</h1>
        <% if (quests && quests.length > 0) { %>
            <% quests.forEach(quest => { %>
                <div class="list-container">
                    <h2><%= quest.title %></h2>
                    <p><%= quest.description %></p>
                    <p>Difficulty: <%= quest.difficulty %></p>
                    <p>Reward: <%= quest.reward.gold %> gold, <%= quest.reward.experience %> XP</p>

                    <% if (quest.status === 'open') { %>
                        <button class="button">Take Quest</button>
                    <% } else { %>
                        <p>Status: <%= quest.status %></p>
                    <% } %>

                    <h3>Reviews:</h3>
                    <% if (quest.reviews && quest.reviews.length > 0) { %>
                        <ul>
                            <% quest.reviews.forEach(review => { %>
                                <li>
                                    <p><strong>Rating:</strong> <%= review.rating %> / 5</p>
                                    <p><strong>Comment:</strong> <%= review.comment %></p>
                                    <p><strong>Date:</strong> <%= new Date(review.date).toLocaleString() %></p>
                                </li>
                            <% }); %>
                        </ul>
                    <% } else { %>
                        <p>No reviews yet.</p>
                    <% } %>
                </div>
            <% }); %>
        <% } else { %>
            <p>No quests available.</p>
        <% } %>
    </div>
</body>
</html>
