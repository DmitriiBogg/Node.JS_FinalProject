        <!-- Ğ¡Ğ¿Ğ¸ÑĞ¾Ğº Ğ¿ĞµÑ€ÑĞ¾Ğ½Ğ°Ğ¶ĞµĞ¹ -->
        <ul>
            <% characters.forEach(character => { %>
                <li>
                    <strong><%= character.name %></strong> (Level: <%= character.level %>)
                    <form action="/characters/delete/<%= character._id %>" method="POST" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </li>
            <% }); %>
        </ul>

        <!-- Ğ¤Ğ¾Ñ€Ğ¼Ğ° Ğ´Ğ»Ñ ÑĞ¾Ğ·Ğ´Ğ°Ğ½Ğ¸Ñ Ğ¿ĞµÑ€ÑĞ¾Ğ½Ğ°Ğ¶Ğ° -->
        <h3>Create New Character</h3>
        <form action="/characters/create" method="POST">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>
            
            <label for="class">Class:</label>
            <select id="class" name="class">
                <option value="Warrior">Warrior</option>
                <option value="Mage">Mage</option>
                <option value="Ranger">Ranger</option>
            </select>

            <button type="submit" class ="button">Create</button>
        </form>

        <!-- Ğ”Ğ¾ÑÑ‚ÑƒĞ¿Ğ½Ñ‹Ğµ Ğ·Ğ°Ğ´Ğ°Ğ½Ğ¸Ñ -->
        <h3>Available Quests</h3>
        <ul>
            <% if (quests && quests.length) { %>
                <% quests.forEach(quest => { %>
                    <li>
                        <strong><%= quest.title %></strong> - Reward: <%= quest.gold %> Gold
                        <form action="/quests/take/<%= quest._id %>" method="POST">
                            <button type="submit" class ="button">Take Quest</button>
                        </form>
                    </li>
                <% }); %>
            <% } else { %>
                <p>No quests available.</p>
            <% } %>
        </ul>
        

        <a href="/logout">Logout</a>
    </div>
</body>
</html>
